{
  "name": "llvm-language-server",
  "displayName": "llvm-language-server",
  "description": "A language server for LLVM IR",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "author": {
    "name": "Jade Abraham"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "llvm"
  ],
  "main": "./out/extension.js",
  "icon": "./icon/LLVMWyvernSmall.png",
  "contributes": {
    "commands": [
      {
        "command": "llvm-language-server.restart",
        "title": "Restart the language server"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:llvm",
    "workspaceContains:*.ll"
  ],
  "extensionDependencies": [
    "ms-python.python",
    "sunshaoce.llvmir"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run make_bundled",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "make_bundled": "./scripts/make_bundled.sh",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2",
    "@vscode/python-extension": "^1.0.5"
  }
}
